{
  "name": "email-analyzer",
  "publisher": "email-analyzer",
  "displayName": "Email Analyzer",
  "description": "A VS Code extension that analyzes emails using VS Code Language Chat Model and LlamaIndex to extract data and classify request types",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Machine Learning",
    "Data Science",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onChat:email-analyzer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "email-analyzer.analyzeEmail",
        "title": "Analyze Email",
        "category": "Email Analyzer"
      },
      {
        "command": "email-analyzer.analyzeBulkEmails",
        "title": "Analyze Multiple Emails",
        "category": "Email Analyzer"
      },
      {
        "command": "email-analyzer.start",
        "title": "Start Email Analysis",
        "category": "Email Analyzer",
        "enablement": "true"
      }
    ],
    "chatParticipants": [
      {
        "id": "email-analyzer",
        "name": "email-analyzer",
        "description": "Analyze emails and create support tickets",
        "commands": [
          {
            "name": "start",
            "description": "Start email analysis"
          }
        ]
      }
    ],
    "configuration": {
      "title": "Email Analyzer",
      "properties": {
        "emailAnalyzer.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the email analyzer extension"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.2.1",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.33.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@vscode/vsce": "^3.6.0",
    "dotenv": "^17.2.1"
  }
}
